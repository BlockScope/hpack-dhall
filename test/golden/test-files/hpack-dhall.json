{
    "source-dirs": "library",
    "library": {
        "exposed-modules": "Hpack.Dhall"
    },
    "tests": {
        "golden": {
            "source-dirs": [
                "test/golden/src"
            ],
            "main": "Golden.hs",
            "dependencies": [
                "base",
                "Cabal",
                "Diff",
                "dhall",
                "filepath",
                "microlens",
                "prettyprinter",
                "tasty",
                "tasty-golden",
                "text",
                "megaparsec >= 7.0.1",
                "dhall >= 1.18.0",
                "dhall-json >= 1.2.4",
                "hpack >= 0.31.0",
                "transformers",
                "aeson",
                "utf8-string"
            ]
        }
    },
    "copyright": "© 2018 Phil de Joux, © 2018 Block Scope Limited",
    "category": "Development",
    "license-file": "LICENSE",
    "maintainer": "Phil de Joux <phil.dejoux@blockscope.com>",
    "ghc-options": "-Wall",
    "dependencies": [
        "base == 4.*",
        "megaparsec >= 7.0.1",
        "dhall >= 1.18.0",
        "dhall-json >= 1.2.4",
        "hpack >= 0.31.0",
        "transformers",
        "aeson",
        "text",
        "microlens",
        "filepath",
        "aeson-pretty",
        "bytestring",
        "prettyprinter",
        "yaml"
    ],
    "name": "hpack-dhall",
    "version": "0.4.1",
    "extra-source-files": [
        "package.dhall",
        "changelog.md",
        "README.md",
        "test/golden/**/*.dhall",
        "test/golden/**/*.dhl",
        "test/golden/**/*.cabal",
        "test/golden/**/*.json",
        "test/golden/**/*.yaml",
        "test/golden/**/*.golden"
    ],
    "synopsis": "hpack's dhalling",
    "github": "blockscope/hpack-dhall",
    "tested-with": "GHC == 8.0.2, GHC == 8.2.2, GHC == 8.4.3, GHC == 8.4.4, GHC == 8.6.1",
    "license": "BSD3",
    "executables": {
        "dhall-hpack-yaml": {
            "source-dirs": [
                "exe/options",
                "exe/dhall-hpack-yaml"
            ],
            "main": "YamlMain.hs",
            "dependencies": [
                "hpack-dhall",
                "optparse-applicative"
            ]
        },
        "dhall-hpack-json": {
            "source-dirs": [
                "exe/options",
                "exe/dhall-hpack-json"
            ],
            "main": "JsonMain.hs",
            "dependencies": [
                "hpack-dhall",
                "optparse-applicative"
            ]
        },
        "dhall-hpack-cabal": {
            "source-dirs": [
                "exe/options",
                "exe/dhall-hpack-cabal"
            ],
            "main": "CabalMain.hs",
            "dependencies": [
                "hpack-dhall",
                "optparse-applicative"
            ]
        },
        "dhall-hpack-dhall": {
            "source-dirs": [
                "exe/options",
                "exe/dhall-hpack-dhall"
            ],
            "main": "DhallMain.hs",
            "dependencies": [
                "hpack-dhall",
                "optparse-applicative"
            ]
        }
    },
    "description": "Work with hpack's top-level\n<https://github.com/sol/hpack#top-level-fields fields> in a Dhall\nrecord with the following executables;\n\n* with @dhall-hpack-cabal@ write the @.cabal@ for a @.dhall@ package description.\n* with @dhall-hpack-dhall@ show the package description expression, with imports resolved.\n* with @dhall-hpack-json@ show the package description as JSON.\n* with @dhall-hpack-yaml@ show the package description as YAML.\n"
}